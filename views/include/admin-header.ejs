<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MyApp Admin</title>
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body { 
            padding-top: 60px; 
            background-color: #f8f9fa;
        }
        .main-navbar { 
            position: fixed; 
            top: 0; 
            left: 0;
            right: 0;
            z-index: 1001;
            width: 100%;
        }
        .admin-sidebar {
            background: #2c3e50;
            color: white;
            min-height: 100vh;
            padding: 15px 0;
            position: fixed;
            left: 0;
            top: 60px;
            width: 220px;
            overflow-y: auto;
        }
        .admin-sidebar a {
            color: #ecf0f1;
            text-decoration: none;
            padding: 10px 15px;
            display: block;
            border-radius: 5px;
            margin: 3px 10px;
            transition: all 0.3s ease;
            font-size: 14px;
        }
        .admin-sidebar a:hover,
        .admin-sidebar a.active {
            background: #3498db;
            color: white;
        }
        .admin-header {
            background: #34495e;
            color: white;
            padding: 15px 20px;
            margin-bottom: 20px;
        }
        .main-content {
            margin-left: 220px;
            padding: 15px 25px;
            width: calc(100% - 220px);
            min-height: calc(100vh - 60px);
        }
        .admin-content-wrapper {
            width: 100%;
            max-width: none;
        }
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .stat-card.green {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        .stat-card.orange {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }
        .stat-card.purple {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
            color: #333;
        }
        .content-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            padding: 18px;
            margin-bottom: 18px;
        }
        .page-header {
            margin-bottom: 20px;
            padding-bottom: 12px;
            border-bottom: 1px solid #e9ecef;
        }
        .page-header h2 {
            margin-bottom: 5px;
            color: #2c3e50;
            font-size: 1.75rem;
        }
        .page-header p {
            color: #6c757d;
            margin-bottom: 0;
            font-size: 14px;
        }
        /* Table and form improvements */
        .table-responsive {
            width: 100%;
        }
        .table {
            width: 100%;
            margin-bottom: 0;
        }
        .form-control, .form-select {
            width: 100%;
        }
        .row {
            margin-left: 0;
            margin-right: 0;
        }
        .col-md-3, .col-md-4, .col-md-6, .col-md-8, .col-md-9, .col-md-12 {
            padding-left: 8px;
            padding-right: 8px;
        }
        /* Maximize space usage */
        .container-fluid {
            padding-left: 0;
            padding-right: 0;
            max-width: 100%;
        }
        .card {
            margin-bottom: 15px;
            border-radius: 8px;
        }
        .card-body {
            padding: 15px;
        }
        @media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            .admin-sidebar.show {
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
                padding: 10px 15px;
                width: 100%;
            }
            .admin-content-wrapper {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark main-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin">
                <i class="fas fa-tools"></i> Admin Panel
            </a>
            <button class="navbar-toggler d-lg-none" type="button" onclick="toggleSidebar()">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/shop" target="_blank">
                    <i class="fas fa-store"></i> View Shop
                </a>
                <a class="nav-link" href="/logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="admin-sidebar" id="adminSidebar">
        <h5 class="text-center mb-3" style="font-size: 14px; padding: 0 10px;">
            <i class="fas fa-tools"></i> Admin
        </h5>
        <a href="/admin" class="<%= (title && title.includes('Dashboard')) ? 'active' : '' %>">
            <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>
        <a href="/admin/products" class="<%= (title && title.includes('Product')) ? 'active' : '' %>">
            <i class="fas fa-box"></i> Manage Products
        </a>
        <a href="/admin/add-product" class="<%= (title && title.includes('Add') && title.includes('Product')) ? 'active' : '' %>">
            <i class="fas fa-plus"></i> Add Product
        </a>
        <a href="/admin/categories" class="<%= (title && title.includes('Categories')) ? 'active' : '' %>">
            <i class="fas fa-tags"></i> Categories
        </a>
        <a href="/admin/promo-codes" class="<%= (title && title.includes('Promo')) ? 'active' : '' %>">
            <i class="fas fa-ticket-alt"></i> Promo Codes
        </a>
        <a href="/admin/add-promo-code" class="<%= (title && title.includes('Add') && title.includes('Promo')) ? 'active' : '' %>">
            <i class="fas fa-plus-circle"></i> Add Promo Code
        </a>
        <a href="/admin/users" class="<%= (title && title.includes('Users')) ? 'active' : '' %>">
            <i class="fas fa-users"></i> Manage Users
        </a>
        <a href="/admin/income-analytics" class="<%= (title && title.includes('Analytics') || title.includes('Income')) ? 'active' : '' %>">
            <i class="fas fa-chart-line"></i> Income Analytics
        </a>
        <hr style="border-color: #3498db;">
        <a href="/shop" target="_blank">
            <i class="fas fa-store"></i> View Shop
        </a>
        <a href="/logout">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="admin-content-wrapper">