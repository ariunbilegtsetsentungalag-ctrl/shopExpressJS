<%- include('../include/admin-header') %>

<style>
        .form-card {
            background: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            margin-bottom: 20px;
        }
        .form-section {
            margin-bottom: 25px;
            padding: 18px;
            border: 1px solid #e9ecef;
            border-radius: 10px;
        }
        .form-section h5 {
            color: #495057;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e9ecef;
        }
        .discount-preview {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-top: 10px;
        }
        .preview-text {
            font-weight: bold;
            color: #28a745;
        }
        .help-text {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 5px;
        }
    </style>

            <!-- Page Header -->
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="fas fa-plus-circle"></i> Add New Promo Code</h2>
                        <p class="mb-0">Create a new discount code for customers</p>
                    </div>
                    <a href="/admin/promo-codes" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Promo Codes
                    </a>
                </div>
            </div>

            <div class="content-card">
                    <form method="POST" action="/admin/promo-codes" id="promoCodeForm">
                        <!-- Basic Information -->
                        <div class="form-section">
                            <h5><i class="fas fa-info-circle"></i> Basic Information</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="code" class="form-label">Promo Code *</label>
                                    <input type="text" class="form-control" id="code" name="code" 
                                           required maxlength="20" style="text-transform: uppercase;"
                                           placeholder="e.g., SAVE20, WELCOME10">
                                    <div class="help-text">Code will be automatically converted to uppercase</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="isActive" class="form-label">Status</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked>
                                        <label class="form-check-label" for="isActive">
                                            Active (customers can use this code)
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <label for="description" class="form-label">Description *</label>
                                    <textarea class="form-control" id="description" name="description" 
                                              required maxlength="200" rows="3"
                                              placeholder="Describe what this promo code is for..."></textarea>
                                    <div class="help-text">This description is for admin reference only</div>
                                </div>
                            </div>
                        </div>

                        <!-- Discount Settings -->
                        <div class="form-section">
                            <h5><i class="fas fa-percentage"></i> Discount Settings</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="discountType" class="form-label">Discount Type *</label>
                                    <select class="form-select" id="discountType" name="discountType" required>
                                        <option value="percentage">Percentage (e.g., 20% off)</option>
                                        <option value="fixed">Fixed Amount (e.g., $10 off)</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="discountValue" class="form-label">Discount Value *</label>
                                    <div class="input-group">
                                        <span class="input-group-text" id="discountSymbol">%</span>
                                        <input type="number" class="form-control" id="discountValue" name="discountValue" 
                                               required min="0" step="0.01" placeholder="Enter value">
                                    </div>
                                </div>
                            </div>
                            <div class="discount-preview mt-3" id="discountPreview">
                                <div class="preview-text">Preview: Enter discount value to see preview</div>
                            </div>
                        </div>

                        <!-- Usage Restrictions -->
                        <div class="form-section">
                            <h5><i class="fas fa-shield-alt"></i> Usage Restrictions</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="minimumOrderAmount" class="form-label">Minimum Order Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" id="minimumOrderAmount" 
                                               name="minimumOrderAmount" min="0" step="0.01" value="0"
                                               placeholder="0.00">
                                    </div>
                                    <div class="help-text">Minimum order total required to use this code</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="maximumDiscountAmount" class="form-label">Maximum Discount Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" id="maximumDiscountAmount" 
                                               name="maximumDiscountAmount" min="0" step="0.01"
                                               placeholder="Leave empty for no limit">
                                    </div>
                                    <div class="help-text">Cap the maximum discount (useful for percentage discounts)</div>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label for="expiryDate" class="form-label">Expiry Date *</label>
                                    <input type="datetime-local" class="form-control" id="expiryDate" 
                                           name="expiryDate" required>
                                    <div class="help-text">When this promo code expires</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="usageLimit" class="form-label">Usage Limit</label>
                                    <input type="number" class="form-control" id="usageLimit" 
                                           name="usageLimit" min="1" 
                                           placeholder="Leave empty for unlimited usage">
                                    <div class="help-text">Maximum number of times this code can be used</div>
                                </div>
                            </div>
                        </div>

                        <!-- Category Restrictions (Optional) -->
                        <div class="form-section">
                            <h5><i class="fas fa-tags"></i> Category Restrictions (Optional)</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="applicableCategories" class="form-label">Apply Only to Categories</label>
                                    <select class="form-select" id="applicableCategories" name="applicableCategories" multiple>
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                    <div class="help-text">If selected, code only works for products in these categories</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="excludedCategories" class="form-label">Exclude Categories</label>
                                    <select class="form-select" id="excludedCategories" name="excludedCategories" multiple>
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) %>
                                    </select>
                                    <div class="help-text">Code will not work for products in these categories</div>
                                </div>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle"></i>
                                    Hold Ctrl (Cmd on Mac) to select multiple categories
                                </small>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="text-end">
                            <a href="/admin/promo-codes" class="btn btn-secondary me-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Create Promo Code
                            </button>
                        </div>
                </form>
            </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const discountType = document.getElementById('discountType');
            const discountValue = document.getElementById('discountValue');
            const discountSymbol = document.getElementById('discountSymbol');
            const discountPreview = document.getElementById('discountPreview');
            const minimumOrderAmount = document.getElementById('minimumOrderAmount');
            const maximumDiscountAmount = document.getElementById('maximumDiscountAmount');

            // Set default expiry date to 30 days from now
            const expiryDate = document.getElementById('expiryDate');
            const thirtyDaysFromNow = new Date();
            thirtyDaysFromNow.setDate(thirtyDaysFromNow.getDate() + 30);
            expiryDate.value = thirtyDaysFromNow.toISOString().slice(0, 16);

            // Update discount symbol and preview
            function updateDiscountDisplay() {
                const type = discountType.value;
                const value = parseFloat(discountValue.value) || 0;
                const minOrder = parseFloat(minimumOrderAmount.value) || 0;
                const maxDiscount = parseFloat(maximumDiscountAmount.value) || null;

                // Update symbol
                discountSymbol.textContent = type === 'percentage' ? '%' : '$';
                
                // Update max value for percentage
                if (type === 'percentage') {
                    discountValue.max = 100;
                } else {
                    discountValue.removeAttribute('max');
                }

                // Update preview
                if (value > 0) {
                    let previewText = '';
                    if (type === 'percentage') {
                        previewText = `${value}% off`;
                        if (maxDiscount) {
                            previewText += ` (max $${maxDiscount.toFixed(2)})`;
                        }
                    } else {
                        previewText = `$${value.toFixed(2)} off`;
                    }
                    
                    if (minOrder > 0) {
                        previewText += ` on orders over $${minOrder.toFixed(2)}`;
                    }
                    
                    discountPreview.querySelector('.preview-text').textContent = `Preview: ${previewText}`;
                } else {
                    discountPreview.querySelector('.preview-text').textContent = 'Preview: Enter discount value to see preview';
                }
            }

            // Event listeners
            discountType.addEventListener('change', updateDiscountDisplay);
            discountValue.addEventListener('input', updateDiscountDisplay);
            minimumOrderAmount.addEventListener('input', updateDiscountDisplay);
            maximumDiscountAmount.addEventListener('input', updateDiscountDisplay);

            // Convert code to uppercase
            document.getElementById('code').addEventListener('input', function() {
                this.value = this.value.toUpperCase();
            });

            // Form validation
            document.getElementById('promoCodeForm').addEventListener('submit', function(e) {
                const type = discountType.value;
                const value = parseFloat(discountValue.value);
                
                if (type === 'percentage' && value > 100) {
                    e.preventDefault();
                    alert('Percentage discount cannot exceed 100%');
                    return false;
                }
                
                if (value <= 0) {
                    e.preventDefault();
                    alert('Discount value must be greater than 0');
                    return false;
                }
                
                const expiryDateTime = new Date(expiryDate.value);
                if (expiryDateTime <= new Date()) {
                    e.preventDefault();
                    alert('Expiry date must be in the future');
                    return false;
                }
            });

            // Initialize display
            updateDiscountDisplay();
        });
    </script>

<%- include('../include/admin-footer') %>